<h1> Trip #<%= @trip[:id]%> Edit Form </h1>

<%= form_for @trip do |t| %>
  Driver ID: <%= t.number_field :driver_id %>
  Rider ID: <%= t.number_field :rider_id %>
  Date: <%= t.date_field :date%>
  Cost: <%= t.number_field :cost%>
  Rating: <%= t.number_field :rating%>

  <%= t.submit value: "Save Changes"%>
<%end%>

<% if @trip.errors.any? %>
  <% @trip.errors.each do |attribute, message| %>
    <%= attribute.capitalize %> <%= message %>
  <% end %>
<% end %>
