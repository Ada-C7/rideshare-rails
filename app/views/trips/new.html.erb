<H2> New Trip </h2>
  <% if @trip.errors.any? %>
  <ul class="errors">
    <% @trip.errors.each do |column, message| %>
    <li>
      <strong><%= column.capitalize %></strong> <%= message %>
    </li>
    <% end %>
  </ul>
  <% end %>


  <%= form_for @trip do |f| %>
    <%= f.label :driver_id %>
    <%= f.text_field :driver_id %>
    <%= f.label :passenger_id %>
    <%= f.text_field :passenger_id %>
    <%= f.label :date %>
    <%= f.text_field :date %>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <%= f.submit value: "create trip" %>
  <% end %>
