<h1>Trip Info</h1>
<h2>Trip id</h2> <%= @trip.id %>
<h2>Trip rider</h2> <%= link_to @trip.rider.name, rider_path(@trip.rider_id) %>
<h2>Trip driver</h2> <%= link_to @trip.driver.name, driver_path(@trip.driver_id) %>
<h2>Trip cost</h2> <%= @trip.cost %>
<h2>Trip rating</h2> <%= @trip.rating %>


<%= link_to "Edit", edit_trip_path(@trip.id) %>
<%= link_to "Delete", trip_path(@trip.id), data: { confirm: "Are you sure you want to delete this trip?" }, method: :delete %>
<%= link_to "Home", root_path %>
