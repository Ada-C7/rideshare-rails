<h1><%= "Trip ID: #{@trip.id}"%></h1>

<ul>


<li>Passenger: <%= link_to @trip.passenger.name, passenger_path(@trip.passenger)%></li>
<li>Driver: <%= link_to @trip.driver.name, driver_path(@trip.driver)%></li>
<li><%= "Date: #{@trip.date.strftime('%m %d %Y')}"%></li>
<li><%= "Cost: $#{'%.2f' % (@trip.cost/100.0)}"%></li>
<%= render partial: "rating", locals: {trip: @trip} %>
</ul>

<%= button_to "Update trip infomration", edit_trip_path(@trip),
  method: :get %>

<%= button_to "Delete trip", trip_path(@trip), method: :delete,
  data: {confirm: "Are you sure you want to delete this trip?"} %>
