<h2>The trip you selected!</h2>

<h3>Driver: <%= link_to @result_trip.driver.name, driver_path(@result_trip.driver_id)%></h3>

<h3>Passenger: <%= link_to @result_trip.passenger.name, passenger_path(@result_trip.passenger_id) %></h3>

<h3>Date: <%= @result_trip.date %></h3>

<h3>Rating: <%= @result_trip.rating %></h3>

<h3>Cost: $<%= @result_trip.cost %></h3>

<%= link_to "Edit", edit_trip_path(@result_trip.id), class: :button %>
<%= link_to "Delete", trip_path(@result_trip.id),
  data: {confirm: "Do you want to delete this trip? NO GOING BACK!!!"},
  method: :delete, class: :button
%>
