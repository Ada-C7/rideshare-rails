<h1>Trip Details</h1>

<h2>Trip Id: <%= @trip.id %></h2>
<p>Trip Date: <%= @trip.date %></p>
<p>Driver: <%= link_to @trip.driver.name, driver_path(@trip) %></p>
<p>Rider: <%= link_to @trip.user.name, user_path(@trip.user) %></p>

<%= link_to 'All Trips', trips_path %>
<%= link_to 'Edit', edit_trip_path(@trip.id) %>
<%= link_to 'Delete', trip_path, data: { confirm: "Are you sure you would like to delete this trip?"},
method: :delete  %>
