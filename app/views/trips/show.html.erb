<h1 class="header">Trip Details</h1>

<ul class="profile">
  <li><strong>Cost: </strong>$ <%= (@result_trip.cost / 100.0).round(2)%></li>
  <li><strong>Rating: </strong><%= @result_trip.rating %></li>
  <li><strong>Driver: </strong><%= link_to @result_trip.driver.name, driver_path(@result_trip.driver.id) %></li>
  <li><strong>Passenger: </strong><%= link_to @result_trip.passenger.name, passenger_path(@result_trip.passenger.id) %></li>
</ul>

<div class="options">
  <h4><%= link_to "Edit", edit_trip_path(@result_trip.id)%></h4>
  <h4><%= link_to "Delete", trip_path(@result_trip.id), data: { confirm: "Are you sure you want to delete this trip?" }, method: :delete %></h4>
</div>
