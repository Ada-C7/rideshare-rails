<h2>Trip #<%= @trip.id %> Details</h2>

<ul>
  <li>Driver: <%= link_to @trip.driver.name, driver_path(@trip.driver.id), method: :get %></li>
  <li>Rider: <%= link_to @trip.rider.name, rider_path(@trip.rider.id), method: :get %></li>
  <li>Date: <%= @trip.date %></li>
  <li>Fare: $<%= @trip.fare %></li>
  <li>Rating: <%= @trip.rating %></li>
  <li><%= link_to "[edit]", edit_trip_path(@trip.id), method: :get %>
  | <%= link_to "[delete]", trip_path(@trip.id), method: :delete,
  data: {confirm: "Delete this trip?"} %></li>
</ul>
