<section>
  <%= form_for @trip do |f| %>

  <%= f.label :passenger_id %>
  <%= f.text_field :passenger_id, value: @trip.passenger.name, disabled: true  %>

  <%= f.label :driver_id %>
  <%= f.text_field :driver_id, value: @trip.driver.name, disabled: true  %>

  <%= f.label :date, "Date (YYYY-MM-DD)" %>
  <%= f.text_field :date %>

  <%= f.label :cost %>
  <%= f.text_field :cost %>


  <%= f.label :rating %>
  <%= f.text_field :rating %>

  <%= f.submit button_text%>

  <% end %>
</section>
