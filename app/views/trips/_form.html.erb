<section>
  <%= form_for @trip do |f| %>
  <%= f.label :trip_id%>
  <%= f.text_field :trip_id %>

  <%= f.label :driver_id%>
  <%= f.text_field :driver_id %>

  <%= f.label :passenger_id%>
  <%= f.text_field :passenger_id %>

  <%= f.label :date%>
  <%= f.text_field :date %>

  <%= f.label :rating%>
  <%= f.text_field :rating %>

  <%= f.label :cost%>
  <%= f.text_field :cost %>


  <%= f.submit value: "#{submit_text} Trip" %>
  <% end %>
</section>
