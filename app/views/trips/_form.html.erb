

<%= form_for @trip do |f| %>

  <%= f.label :driver_id %>
  <%= f.select :driver_id, Driver.all.map { |driver| [driver.name, driver.id] } %>

  <%= f.label :rider_id %>
  <%= f.select :rider_id, Rider.all.map { |rider| [rider.name, rider.id] } %>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :rating %>
  <%= f.text_field :rating %>

  <%= f.submit action_name %>

<% end %>
