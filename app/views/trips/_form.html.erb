<h1>Add a Trip</h1>

<section>
  <% if @trip.errors.any? %>
    <h2>Something went wrong</h2>
   <ul class = "errors">
     <% @trip.errors.each do |column, message| %>
       <li>
         <strong><%= column.capitalize %></strong> <%= message %>
       </li>
     <% end %>
   </ul>
  <% end %>
</section>

<%= form_for @trip do |f| %>

  <%= f.label :driver_id, "Driver ID" %>
  <%= f.text_field :driver_id %>

  <%= f.label :passenger_id, "Passenger ID" %>
  <%= f.text_field :passenger_id %>

  <%= f.label :rating, "Rating" %>
  <%= f.text_field :rating %>

  <%= f.submit value: "Add #{submit_text} Trip" %>
<% end %>
