<h1>Add a Trip</h1>

<%= form_for @trips do |f| %>

  <%= f.label :trip_id, "Trip ID" %>
  <%= f.text_field :trip_id %>

  <%= f.label :driver_id, "Driver ID" %>
  <%= f.text_field :driver_id %>

  <%= f.label :passenger_id, "Passenger ID" %>
  <%= f.text_field :passenger_id %>

  <%= f.label :date, "Date" %>
  <%= f.text_field :date %>

  <%= f.label :rating, "Rating" %>
  <%= f.text_field :rating %>

  <%= f.submit value: "Add #{submit_text} Trip" %>
<% end %>
