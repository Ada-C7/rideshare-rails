<h2>All Trips!</h2>

<table>
  <tr>
    <th>Driver ID</th>
    <th>Passenger ID</th>
    <th>Date</th>
    <th>Rating</th>
    <th>Cost</th>
  </tr>
  <% @trips.each do |trip| %>
  <tr>
    <td><%= link_to trip.driver.name, driver_path(trip.driver_id) %></td>
    <td><%= link_to trip.passenger.name, passenger_path(trip.passenger_id) %></td>
    <td><%= trip.date %></td>
    <td><%= trip.rating %></td>
    <td>$<%= trip.cost %></td>
  </tr>
  <% end %>
</table>
