<h1>TRIPS</h1>

<table>
    <tr>
      <th> Trip ID </th>
      <th> Driver </th>
      <th> Rider </th>
      <th> Rating </th>
    </tr>
    <% @trips.each do |trip| %>
    <tr>
      <td> <%= link_to trip.id, trip_path(trip.id) %> </td>
      <td>
        <%= link_to(trip.driver.name,
            driver_path(trip.driver_id)) if trip.driver.name.present? %>
      </td>
      <td> <%= link_to trip.rider, rider_path(trip.rider_id) %> </td>
      <td> <%= trip.rating %> </td>
      <td> <%= link_to "Edit", edit_trip_path(trip.id)%> </td>
    </tr>
    <% end %>
</table>
