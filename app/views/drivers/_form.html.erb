
<%= form_for @driver do | f | %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :vin %>
  <%= f.text_field :vin %>

  <%= f.label "Are you available?" %>
  <%= f.check_box :availability %>

  <%= f.submit %>

<% end %>

<ul>
  <% @driver.errors.each do | field, msg | %>
  <li>
    <%= field %> <%= msg %>
  </li>
  <% end %>
</ul>
