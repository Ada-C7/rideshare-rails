<ul class="errors">
  <% @driver.errors.each do |field, msg| %>
  <li>
    <%= field %> <%= msg %>
  </li>
    <% end %>
</ul>

<%= form_for @driver do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :vin %>
<%= f.text_field :vin %>
<%= f.label :availability %>
<%= f.check_box :availability, {}, true, false %>

<%= f.submit action_name %>
<% end %>
