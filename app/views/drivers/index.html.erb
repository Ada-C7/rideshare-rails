<body>
  <h1>Drivers' List</h1>
  <button class="mdl-button mdl-js-button mdl-button--raised">
    <%= link_to "new driver", new_driver_path %>
  </button>

  <section>
    <% @drivers.each do |driver| %>
    <%= link_to driver.name, driver_path(driver.id) %>
    <!-- <%= "Driver ID: #{driver[:id]} Name: #{driver[:name]}"%> -->
    <%= link_to "✏️", edit_driver_path(driver) %>
    <%= link_to "🗑", driver_path(driver), method: :delete, data: {confirm: "Are you sure?"} %></br>
  <% end %>
  </section>

  </br>
  <button class="mdl-button mdl-js-button mdl-button--raised">
    <%= link_to "new driver", new_driver_path %>
  </button>
</body>
