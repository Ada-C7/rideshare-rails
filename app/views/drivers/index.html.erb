<h1>All the drivers</h1>

<ol>
  <% @drivers.sort_by{|d| d.id}.each do |driver| %>
    <li>
      <p>Name: <%= link_to driver[:name], driver_path(driver[:id]) %></p>
      <p>VIN: <%= driver[:vin] %> </p>

      <% if driver.driver_trips.empty? %>
        <p>No trips have been given yet</p>
      <%else%>
        <p>Average Rating: <%= driver.rating%> out of 5 </p>
      <%end%>
      
      <%= link_to 'Delete', driver_path(driver.id), data: {:confirm => 'You sure?'}, :method => :delete%>
      <%= link_to "Edit this driver", edit_driver_path(driver.id) %>

    </li>
    <%end%>
  </ol>
