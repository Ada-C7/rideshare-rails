    <% @drivers.each do |driver| %>
   <tr>
    <td><%= driver.id %></td>
      <td><%= link_to driver.name, driver_path(driver.id) %></td>
      <td><%= driver.vin %></td>

      <td> <%= button_to "Edit", edit_driver_path(driver.id), method: :get %></td>

      <td> <%= button_to "Delete", driver_path(driver.id), method: :delete, data: {confirm: "Are you sure you want to delete this driver?"} %></td></tr>
    <% end %>
  </table>
