<%= render partial: "welcome/header" %>
<h1>Drivers</h1>
<h2><%= link_to "Create New Driver", new_driver_path, method: :get %></h2>

<ol>
  <% @drivers.each do |driver| %>
  <li><%= link_to driver[:name], driver_path(driver.driver_id) %>
    <%= link_to "Delete", driver_path(driver),
  data: {method: :delete, confirm: "Are you sure you want to delete the #{driver.name}?"} %>
  <%= link_to "Edit", edit_driver_path(driver.id), method: :get %>
</li>
<% end %>
</ol>
