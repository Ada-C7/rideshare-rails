<h1>Drivers#index</h1>

<main>
  <ul>
    <% @drivers.each do |driver| %>
      <li>ID: <%= driver[:id]%> - <%= link_to driver[:name], driver_path(driver.id) %></li>
      <p><%= link_to "Edit Driver", edit_driver_path(driver) %></p>
      <p><%= link_to "Delete Driver", driver_path(driver), method: :delete, data: { confirm: "You sure?" } %></p>
      <p>Average Rating:<%= driver.calculate_average_rating %> </p> 
    <% end %>
  </ul>
</main>

<footer>
</footer>
