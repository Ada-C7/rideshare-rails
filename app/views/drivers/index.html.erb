
<div id = "index_site">
  <section id = "index_first_section">
    <h1 id = "index_header_text">List of all drivers</h1>
    <p id = "index_add_button">
      <%= link_to "Add driver", new_driver_path, class: "button_link"%>
    </p>
  </section>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>


     <table class="listing" summary="Drivers list">

       <tr class="header">
         <th>ID</th>
         <th>Name</th>
         <!-- <th>VIN</th> -->
         <th>Average rating</th>

       </tr>

       <% @drivers.each do |driver| %>
       <tr>
         <td><%= driver[:id] %></td>
         <td><%= driver[:name] %></td>
         <!-- <td><%#= driver[:vin] %></td> -->
         <td><%= driver.average_rating %></td>



         <td class="actions">
           <%= link_to "Show", driver_path(driver), class: "button_link" %>
           <%= link_to "Edit", edit_driver_path(driver), class: "button_link" %>
           <%= link_to "Delete", driver_path(driver),
           data: {method: :delete, confirm: "Are you sure you want to delete #{driver.name} from the list?"}, class: "button_link" %>
         </td>
       </tr>
       <% end %>
     </table>

