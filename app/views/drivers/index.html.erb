<h1>Drivers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>VIN</th>
    <th>Average Rating</th>

  </tr>
  <% @drivers.each do |driver| %>
    <tr>
      <td><%= link_to driver.name, driver_path(driver.id), method: :get %></td>
      <td><%= driver.vin %></td>
      <td><%= driver.average_rating %></td>
      <td><%= link_to "[edit]", edit_driver_path(driver.id), method: :get %></td>
      <td><%= link_to "[delete]", driver_path(driver.id), method: :delete, data: {confirm: "Are you sure you want to delete this driver?"} %></td>
    </tr>
  <% end %>
</table>
