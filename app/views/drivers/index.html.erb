
<h1>Welcome to Drivers List</h1>
<section>
  <%= link_to "Add new Driver", new_driver_path, class: "link" %>
</section>


<table>
  <tr>
    <th>
    ID
    </th>
    <th>
     Name
    </th>
    <th>
     Vin
    </th>
    <th>

