<h1>Drivers</h1>
<h3> <%= link_to "Create New Driver", new_driver_path %> </h3>
<ul>
  <% @drivers.each do |driver| %>
  <li>
    <%= link_to "Driver: #{driver.id}", driver_path(driver.id) %>
    <%= link_to "Edit", edit_driver_path(driver) %>
    <%= link_to "Delete", driver_path(driver), data: {method: :delete, confirm: "Are you sure you want to delete #{driver.id}"} %>

  </li>
  <% end %>
</ul>
