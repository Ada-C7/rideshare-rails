<section id = "show_section">
  <h1>
    Meet the driver <%= @driver.name%>!
  </h1>

  <%= @driver.name%> (vin: <%= @driver.vin%>)

  <P>
    Average rating from passengers: <%= @driver.average_rating %>
  </P>
  <p id = "show_about_text">
    Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
  </p>
  <p>
    <%= link_to "Back", drivers_path%>
    <%= link_to "Edit", edit_driver_path%>
    <%= link_to "Delete", driver_path,
    data: {method: :delete, confirm: "Are you sure you want to delete #{@driver.name} from the list?"}%>
  </p>

  <h3>
    List of <%= @driver.name%>'s passengers
  </h3>


  <!-- TABLE -->

  <div class="tbl-header">
  <!-- <div> -->
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>

        <tr>
          <th>Name</th>
          <th>Date</th>
          <th>Rating</th>
          <th>Show Trip</th>

        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
  <!-- <div> -->
    <table cellpadding="0" cellspacing="0" border="0">
      <% @driver.trips.each do |trip| %>
      <tr>
        <td><%= trip.rider[:name] %></td>
        <td><%= trip[:date] %></td>
        <td><%= trip[:rating] %></td>
        <td>
          <%= link_to "Show", trip_path(trip), class: "button_link" %>
        </td>

      </tr>
      <% end %>

    </table>
  </div>

</section>
