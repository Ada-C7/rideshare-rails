<h1>Add a New Driver</h1>

<% if @driver.errors.any? %>
  <h2>Something went wrong</h2>
 <ul class = "errors">
   <% @driver.errors.each do |column, message| %>
     <li>
       <strong><%= column.capitalize %></strong> <%= message %>
     </li>
   <% end %>
 </ul>
<% end %>

<%= form_for @driver do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :driver_id %>
  <%= f.text_field :driver_id %>

  <%= f.label :vin %>
  <%= f.text_field :vin %>

  <%= f.submit value: "Add new Driver" %>
<% end %>
