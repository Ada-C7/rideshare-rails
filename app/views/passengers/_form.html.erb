<section>
  <% if @passenger.errors.messages.length > 0 %>
  <h2>Something went wrong!</h2>
  <ul>
    <% @passenger.errors.messages.each do |field, problem_list| %>
      <% problem_list.each do |problem| %>
    <li>
      <strong><%= field %>: </strong>
      <%= problem %>
    </li>
      <% end %>
    <% end %>
  </ul>
  <% end %>
</section>

<section>
  <%= form_for @passenger do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :phone_num %>
    <%= f.text_field :phone_num %>

    <%= f.submit value: "#{submit_text}" %>
  <% end %>
</section>
