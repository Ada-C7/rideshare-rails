<section>
  <% if @passenger.errors.messages.length > 0 %>
    <h2> Unable to <%= text %>: </h2>

    <ul>
      <% @passenger.errors.messages.each do |field, problem_list| %>
        <% problem_list.each do |problem| %>
          <li><%= field %> : <%= problem %></li>
        <% end %>
      <% end %>
    </ul>

  <% end %>
</section>



<section>
  <%= form_for @passenger do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>

    <%= f.submit text.capitalize %>

  <% end %>
</section>
