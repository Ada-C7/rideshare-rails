<% if @passenger.errors.any? %>
  <ul class="error">
    <% @passenger.errors.each do |field, msg| %>
    <li>
      Oops! <strong><%= field.capitalize %></strong> <%= msg %>
    </li>
    <% end %>
  </ul>
<% end %>

<ul>
  <%= form_for @passenger do |f| %>
    <li>
      <%= f.label :name, "Name: " %>
      <%= f.text_field :name %>
    </li>
    <li>
      <%= f.label :phone, "Phone Number: " %>
      <%= f.text_field :phone %>
    </li>
</ul>

<section class="button">
  <ul>
    <li>
      <%= f.submit %>
    </li>
    <% end %>
    <li>
      <%= link_to "Cancel", :back %>
    </li>
  </ul>
</section>
