<h1>Passenger: <%= "#{@passenger.name}" %></h1>

<h3>Total spent: $<%= '%.2f' % (@passenger.total_money/100.0) %></h3>
<h3>Contact number: <%= @passenger.phone_number %></h3>

<%= render partial: "request", locals: {passenger: @passenger} %>

<%= render partial: "trips/trips-list", locals: {person: @passenger} %>

<%= button_to "Update passenger's infomration", edit_passenger_path(@passenger),
method: :get %>

<%= button_to "Delete passenger", passenger_path(@passenger), method: :delete,
data: {confirm: "Are you sure you want to delete #{@passenger.name}?"} %>
