<%= render "shared/menu" %>

<h1>Passenger Info:</h1>

<h2>Passenger Name: <%= @passenger[:name] %></h2>

<h3>Passenger's Phone Number: <%= @passenger[:phone_num]%></h3>

<h3>Amount Charged: $<%= @passenger.calculate_charges%></h3>

<h3>Passenger's Trips: </h3>
  <ul>
  <% @passenger.trips.each do |trip| %>
       <li>Trip ID: <%= link_to "#{trip.id}", trip_path(trip.id) %>
    <% end %>
  </ul>

<%= button_to "Edit Passenger", edit_passenger_path, :class => "button", :method => :get %>

<%= button_to "Delete Passenger", passenger_path(@passenger), :class => "button", :method => :delete,
  data: { confirm: "Are you sure you want to delete passenger #{@passenger.name}?" } %>
