<h1>Passenger Details</h1>
<ul>
  <li>Name: <%= @result_passenger.name %></li>
  <li>Phone number: <%= @result_passenger.phone_num %></li>
</ul>

<% @result_passenger.trips.each_with_index do |trip, index| %>
<ul>
  <li><%= link_to "Trip # #{index + 1}" , trip_path(trip.id) %></li>
</ul>
<% end %>

<h2><%= link_to "Edit", edit_passenger_path(@result_passenger.id)%></h2>
<h2><%= link_to "Delete", passenger_path(@result_passenger.id), data: { confirm: "Are you sure you want to delete this passenger?" }, method: :delete %></h2>

<h2><%= link_to "Make New Trip", new_trip_path(@result_passenger.id), method: :post %></h2>
