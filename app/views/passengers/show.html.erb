<h2>Passenger Number: <%= @passenger[:id] %></h2>
  <h3>Name: <%= @passenger[:name] %> <br> Phone Number: <%= @passenger[:phone_num] %></h3>

<h3>Trips:</h3>
<% @passenger.trips.each do |trip| %>
  <%= link_to trip.id, trip_path(trip.id) %>
<% end %>

<h3>Total amount charged: $<%= @passenger.total_amount_charged %></h3>

<% if @passenger.all_trips_complete? %>
  <%= link_to "Add a new trip", new_trip_path(:passenger_id => @passenger.id) %>
<% end %>

<%= link_to "Edit passenger", edit_passenger_path %>
<%= link_to "Delete passenger", passenger_path(@passenger), data: {method: :delete, confirm: "Are you sure you want to delete this passenger: #{@passenger.name}?"} %>
