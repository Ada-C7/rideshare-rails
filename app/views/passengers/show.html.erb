<section id="content">
  <h2><%= @result_passenger.name %></h2>

  <h3><span class="show-field">Phone:</span> <%= @result_passenger.phone_num %></h3>

  <h3><span class="show-field">Total Spent:</span> $ <%= @result_passenger.trips_cost.round(2) %></h3>

  <h2><%= @result_passenger.name %>'s Trips</h2>

  <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>&ensp;Edit'.html_safe, edit_passenger_path %>
  <%= link_to '<i class="fa fa-minus-circle" aria-hidden="true"></i>&ensp;Delete'.html_safe, passenger_path(@result_passenger.id),
        data: { confirm: "Are you sure you want to delete your account?" },
        method: :delete
    %>

  <% @trips = Trip.where(passenger_id: @result_passenger.id) %>

  <table>
    <tr>
      <th>Trip ID</th>
      <th>Driver name</th>
      <th>Date</th>
      <th>Rating</th>
      <th>Cost</th>
    </tr>
    <% @trips.each do |trip| %>
    <tr>
      <td><%= link_to trip.id, trip_path(trip.id) %></td>
      <td><%= link_to trip.driver.name, driver_path(trip.driver_id) %></td>
      <td><%= trip.date %></td>
      <td><%= trip.rating %></td>
      <td>$<%= trip.cost %></td>
    </tr>
    <% end %>
  </table>

  <%= link_to "New Trip", new_trip_path, class: :button %>

  <!-- <%= link_to "Edit", edit_passenger_path, class: :button %>

  <%= link_to "Delete", passenger_path(@result_passenger.id),
    data: {confirm: "Do you want to delete this passenger? NO GOING BACK!!!"},
    method: :delete, class: :button
  %> -->

</section>
