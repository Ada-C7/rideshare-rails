<h1>The passenger you selected!</h1>

<%= @result_passenger.name %>

<%= @result_passenger.phone_num %>

<% @trips = Trip.where(passenger_id: @result_passenger.id) %>

<table>
  <tr>
    <th>Trip ID</th>
    <th>Driver ID</th>
    <th>Passenger ID</th>
    <th>Date</th>
    <th>Rating</th>
  </tr>
  <% @trips.each do |trip| %>
  <tr>
    <td><%= link_to trip.id, trip_path(trip.id) %></td>
    <td><%= link_to trip.driver.name, driver_path(trip.driver_id) %></td>
    <td><%= link_to trip.passenger.name, passenger_path(trip.passenger_id) %></td>
    <td><%= trip.date %></td>
    <td><%= trip.rating %></td>
  </tr>
  <% end %>
</table>

<%= link_to "Create a new trip!", new_trip_path %>

