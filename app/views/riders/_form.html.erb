<% if @rider.errors.messages.length > 0 %>
<section class="errors">
  <h2> SOmething wrong! </h2>
  <ul>
    <% @rider.errors.messages.each do |field, problem_list| %>
    <% problem_list.each do |problem| %>
    <li>
      <%= field %>:
      <%= problem %>
    </li>
    <% end %>
    <% end %>
  </ul>
</section>
<% end %>



<%= form_for @rider do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit %>
<% end %>
