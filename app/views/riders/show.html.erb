<h2>Rider Info</h2>
<h3>Name:</h3> <%= @rider.name %>
<h3>Phone:</h3> <%= @rider.phone_num %>
<h3>Trips:</h3>
<table>
  <tr>
    <th> Trip id </th>
    <th> Driver id </th>
    <th> Rating </th>
  </tr>
  <% @rider.trips.each do |trip| %>
  <tr>
    <td> <%= link_to trip.id, trip_path(trip.id) %> </td>
    <td> <%= link_to trip.driver_id, driver_path(trip.driver.id) %> </td>
    <td> <% if trip.rating != nil %>
           <%= trip.rating %>
         <% else %>
           <%= link_to "Add a rating to this trip", edit_trip_path(trip.id) %>
         <% end %>
    </td>
  </tr>
  <% end %>
</table>

<%= link_to "Edit", edit_rider_path(@rider.id) %>
<%= link_to "Delete", rider_path(@rider.id), data: { confirm: "Are you sure you want to delete this rider?" }, method: :delete %>
<%= link_to "Home", root_path %>
<%= link_to "Add new trip", new_rider_trip_path(@rider.id) %>
