<h1>Riders#index</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>


   <table class="listing" summary="Riders list">
     <tr class="header">
       <th>ID</th>
       <th>Name</th>
       <th>Phone Number</th>
     </tr>

     <% @riders.each do |rider| %>
     <tr>
       <td><%= rider[:id] %></td>
       <td><%= rider[:name] %></td>
       <td><%= rider[:phone_num] %></td>



       <td class="actions">
         <%= link_to("Show", 'rider_path(rider)', :class => 'action show') %>
         <%= link_to("Edit", '#', :class => 'action edit') %>
         <%= link_to("Delete", '#', :class => 'action delete') %>
       </td>
     </tr>
     <% end %>
   </table>
 </div>


