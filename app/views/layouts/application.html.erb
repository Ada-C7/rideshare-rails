<!DOCTYPE html>
<html>
  <head>
    <title>RideshareRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <h1><%= link_to "Ride Share", root_path %></h1>
        <ul>
          <li><%= link_to "See Drivers", drivers_path %></li>
          <li><%= link_to "See Passengers", passengers_path %></li>
          <li><%= link_to "Add New Driver", new_driver_path %></li>
          <li><%= link_to "Add New Passenger", new_passenger_path %></li>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
