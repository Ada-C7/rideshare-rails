<!DOCTYPE html>
<html>
  <head>
    <title>RideshareRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1><%= link_to "RideShare", root_path %></h1>
      <nav>
        <ul><%= link_to "New Passenger", new_passenger_path %></ul>
        <ul><%= link_to "New Driver", new_driver_path %></ul>
        <ul><%= link_to "View Passengers", passengers_path %></ul>
        <ul><%= link_to "View Drivers", drivers_path %></ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
