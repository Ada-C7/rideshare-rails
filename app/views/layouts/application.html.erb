<!DOCTYPE html>
<html>
  <head>
    <title>RideshareRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <section class="drivers">
          <nav>
              <ul>
                  <li><%= link_to "Drivers", drivers_path %></li>
                  <li><%= link_to "Add Driver", new_driver_path %></li>
              </ul>
          </nav>
          <%= yield :drivers %>
      </section>
      <section class="trips">
          <nav>
              <ul>
                  <li><%= link_to "Trips", trips_path %></li>
                  <li><%= link_to "Add Trip", new_trip_path %></li>
              </ul>
          </nav>
          <%= yield :trips %>
      </section>
      <section class="passengers">
          <nav>
              <ul>
                  <li><%= link_to "Passengers", passengers_path %></li>
                  <li><%= link_to "Add Passenger", new_passenger_path %></li>
              </ul>
          </nav>
          <% yield :passengers %>
      </section>
  </body>
</html>
