<h1>Show one User</h1>

<p> User id: <%= @user.id %></p>
<p> User name: <%= @user.name %></p>

<p><%= link_to "edit", edit_user_path(@user.id) %></p>
<p><%= link_to "delete", user_path(@user.id), data: { confirm: "Are you sure you would like to delete this user?"},
method: :delete %></p>
<p>

<%= link_to "Add Trip", new_trip_path(@user.id), :method => :post %>

</p>

<h2> User Trips</h2>
<ul>
<% @user.trips.each do |t| %>
<li>
  Trip id: <%= link_to t.id, trip_path(t.id) %> |  Date: <%= t.date %>
</li>
<% end %>
</ul
