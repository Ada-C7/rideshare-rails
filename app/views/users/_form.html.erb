<ul class="errors">
  <% if @user.errors.any? %>
    <% @user.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
      <% end %>
  <% end %>
</ul>


<%= form_for @user, method: form_method do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :phone_num %>
  <%= f.text_field :phone_num %>

  <%= f.submit action_name %>

<% end %>
